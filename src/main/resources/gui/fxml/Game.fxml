<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import gui.MapVisualizer?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.controllers.GameController"
      prefHeight="400.0" prefWidth="600.0"
      stylesheets="@/gui/Style.css">
    <MapVisualizer  fx:id="visualizer" />
    <Button styleClass="Game" fx:id="startButton" text="Start" onAction="#startGame"/>
    <Label styleClass="Game" fx:id="result" visible="false" />
    <HBox fx:id="soldiersHP">
        <Label fx:id="player1HP" text="Player1: " />
        <Label fx:id="player2HP" text="Player2: " visible="false"/>

        <Label fx:id="bot1HP" visible="false"/>
        <Label fx:id="bot2HP" visible="false"/>
        <Label fx:id="bot3HP" visible="false"/>

    </HBox>
</Pane>
